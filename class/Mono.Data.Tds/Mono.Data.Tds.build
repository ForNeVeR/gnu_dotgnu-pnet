<?xml version="1.0"?>

<project name="Mono.Data.Tds" default="all">
	<target name="all">
		<compile target="library"
				 output="Mono.Data.Tds.dll"
				 debug="${debug.flag}"
				 unsafe="true"
				 install="true"
				 installasdefault="true">

			<sources basedir="${mono.sources}/class/Mono.Data.Tds">
				<includes name="**/*.cs"/> 
				<excludes name="Test/**"/>
			</sources>

			<references>
				<file name="System.dll"/>
			</references>

		</compile>
	</target>
</project>
