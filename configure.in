[echo 'void f(){}' > conftest.c
if test -z "`${CC-cc} -no-cpp-precomp -c conftest.c 2>&1`"; then
  ac_cv_prog_cc_precomp=yes
else
  ac_cv_prog_cc_precomp=no
fi
rm -f conftest*
])
