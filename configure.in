dnl Option to disable cygwin1.dll under Windows.
AC_SUBST(SOCKETLIBS)
AC_ARG_ENABLE(cygwin,
[  --disable-cygwin        Disable cygwin1.dll under Windows],
[case "${enableval}" in
  yes) cygwin=true ;;
  no)  cygwin=false ;;
  *) AC_MSG_ERROR(bad value ${enableval} for --enable-cygwin) ;;
esac],[cygwin=true])
if test x$cygwin = xfalse ; then
  CC="$CC -mno-cygwin"
  SOCKETLIBS="-lwsock32"
  suppress_libm=yes
else
  suppress_libm=no
fi

