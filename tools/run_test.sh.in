# Get the location of "ilrun" from the configuration process.
ILRUN="@ILRUN@"

# Find the top-most directory of the build tree.
if test -f "../csunit/csunit.exe" ; then
	TOPDIR=".."
else
	if test -f "../../csunit/csunit.exe" ; then
		TOPDIR="../.."
	else
		if test -f "../../../csunit/csunit.exe" ; then
			TOPDIR="../../.."
		else
			echo "$0: cannot locate the top of the build tree"
			exit 1
		fi
	fi
fi

# Set the initial status.
STATUS=0

# Process all test .dll's in the current directory.
for i in *.dll; do
	TESTNAME=`basename $i .dll`
	if "$ILRUN" -L "$TOPDIR/csunit" -L "$TOPDIR/runtime/System" "$TOPDIR/csunit.exe" "$i" "$TESTNAME" ; then
		# The test run succeeded.
		:
	else
		# The test run failed.
		STATUS=1
	fi
done

# Return the final status to the caller.
exit $STATUS
